<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:shoping="http://schemas.android.com/apk/res-auto"
    android:background="#EEEEEE" >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </android.support.v7.widget.Toolbar>
    <View style="@style/bg_line"/>
    <LinearLayout
        android:id="@+id/gopay_order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingTop="6dp"
                android:text="任务赏金"
                android:textColor="@color/text_clo"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/gopay_prodmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥480.00"
                android:layout_centerVertical="true"
                android:textColor="@color/text_clo"
                android:textSize="14sp"/>/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:id="@+id/gopay_youhuimoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="优惠金额"
                android:paddingBottom="6dp"
                android:textColor="#FFBB55"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥0.00"
                android:layout_centerVertical="true"
                android:textColor="#FFBB55"
                android:textSize="14sp"/>

        </RelativeLayout>
        <View style="@style/bg_line"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="实付"
                android:textColor="@color/text_clo"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/gopay_shifumoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥480.00"
                android:layout_centerVertical="true"
                android:textColor="@color/red"
                android:textSize="18sp"/>/>

        </RelativeLayout>
        <View style="@style/bg_line"/>
    </LinearLayout>


    <Button
        android:id="@+id/gopay_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_red"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:text="确认支付"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
    <View style="@style/bg_line"/>
</LinearLayout>
